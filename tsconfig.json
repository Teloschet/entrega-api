{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./src",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@accounts/*": ["modules/accounts/*"],
      "@clients/*": ["modules/clients/*"],
      "@deliveryman/*": ["modules/deliveryman/*"],
      "@deliveries/*": ["modules/deliveries/*"],
      "@prisma/*": ["database/*"],
      "@middlewares/*": ["middlewares/*"],
      "@server/*": ["/*"],
      "@docs/*": ["docs/*"]
    }
  },
  "include": ["src/**/*"]
}